<UserControl x:Class="WinCrosshair.View.Controls.ucMonitorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinCrosshair.View.Controls"
             mc:Ignorable="d" Width="200" Height="110" Margin="2"
             d:DesignHeight="45" d:DesignWidth="45">
    <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8">
        <Border.Background>
            <ImageBrush    x:Name="_image"/>
        </Border.Background>
        <Grid>

            <Border Background="{StaticResource windowback}" CornerRadius="0,0,8,8"    VerticalAlignment="Bottom">
                <Label x:Name="_label" Foreground="White" Content="{Binding Content}" 
     
        HorizontalContentAlignment="Center"       
        />
            </Border>
        </Grid>
    </Border>
</UserControl>
